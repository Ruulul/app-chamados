generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Chamado {
  id           Int        @id @default(autoincrement())
  autor        Usuario?    @relation(fields: [autorId], references: [id])
  //autor        String
  autorId      Int        
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  assunto      String     @db.VarChar(255)
  chat         Mensagem[]
  anexo        Int?
  departamento String
  status       String
  prioridade   Int
  atendimento  Boolean       @default(false)
}

model Mensagem {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  //autor     String
  autor     Usuario?  @relation(fields: [autorId], references: [id])
  autorId   Int      
  mensagem  String   @db.VarChar(255)
  chamado   Chamado  @relation(fields: [chamadoId], references: [id])
  chamadoId Int
}

model Usuario {
  id           Int        @id @default(autoincrement())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  email        String     @unique
  senha        String
  nome         String?
  sobrenome    String?
  chamados     Chamado[]
  mensagems    Mensagem[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}